{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd/server",
      "args": ["-config", "./configs/server.yaml"],
      "env": {
        "CGO_ENABLED": "1"
      },
      "showLog": true
    },
    {
      "name": "Attach to Running Server",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": 0
    }
  ]
}
