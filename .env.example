# Docker Compose environment variables
# Copy this file to .env and customize

# JWT Secret (REQUIRED - change in production)
JWT_SECRET=your-random-64-character-secret-key-here

# Server mode (debug, release, test)
GIN_MODE=release

# Database Configuration
# Choose one: sqlite3, postgres, sqlserver
DB_TYPE=sqlite3

# SQLite (default)
# No additional config needed, uses ./data/gitserver.db

# PostgreSQL configuration
POSTGRES_DB=zixiao_git
POSTGRES_USER=zixiao
POSTGRES_PASSWORD=your-secure-postgres-password
# For git-server container to connect to postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME=zixiao_git
DB_USER=zixiao
DB_PASSWORD=your-secure-postgres-password

# SQL Server configuration
SQL_SERVER_PASSWORD=YourStrong!Password123
# For git-server container to connect to sqlserver
# DB_TYPE=sqlserver
# DB_HOST=sqlserver
# DB_PORT=1433
# DB_NAME=zixiao_git
# DB_USER=sa
# DB_PASSWORD=YourStrong!Password123

# Redis configuration (if using redis profile)
REDIS_PASSWORD=your-secure-redis-password

# Frontend API URL
VITE_API_BASE_URL=http://localhost:8080/api/v1

